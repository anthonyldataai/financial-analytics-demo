// .devcontainer/devcontainer.json
{
  "name": "Financial Analytics Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu", // use ubuntu for apt support
  "features": {
    "ghcr.io/devcontainers/features/apt-packages:1": {
      "packages": [
        "python3",
        "python3-pip",
        "curl",
        "git",
        "google-cloud-sdk" // optional: gcloud CLI
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip",
  "remoteUser": "vscode"
}
